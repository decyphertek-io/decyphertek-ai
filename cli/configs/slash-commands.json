{
  "_version": "1.0.0",
  "_description": "Slash command configuration for Adminotaur agent routing",
  "commands": {
    "/web": {
      "name": "web",
      "description": "Search the web and answer with context",
      "mcp_skill": "web-search",
      "tools": ["search", "scrape_url"],
      "ai_provider": "openrouter-ai",
      "enabled": true
    },
    "/rag": {
      "name": "rag",
      "description": "Query ChromaDB vector database for context",
      "mcp_skill": "rag-chat",
      "tools": ["query", "store"],
      "ai_provider": "openrouter-ai",
      "requires_app": "chromadb",
      "enabled": true
    },
    "/news": {
      "name": "news",
      "description": "Search and filter news articles with AI context",
      "mcp_skill": "worldnewsapi",
      "tools": ["search_news"],
      "ai_provider": "openrouter-ai",
      "enabled": true
    },
    "/help": {
      "name": "help",
      "description": "Show available commands and system info",
      "builtin": true,
      "enabled": true
    },
    "/status": {
      "name": "status",
      "description": "Check status of MCP skills and apps",
      "builtin": true,
      "enabled": true
    },
    "/config": {
      "name": "config",
      "description": "View or modify configuration",
      "builtin": true,
      "enabled": true
    }
  },
  "default_routing": {
    "no_command": "openrouter-ai",
    "fallback": "openrouter-ai",
    "context_files": [
      "~/.decyphertek.ai/agent-store/adminotaur/adminotaur.md",
      "~/.decyphertek.ai/mcp-store/*/README.md",
      "~/.decyphertek.ai/app-store/*/README.md",
      "~/.decyphertek.ai/configs/slash-commands.json"
    ]
  }
}
